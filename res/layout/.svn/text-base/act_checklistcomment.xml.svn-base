
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/shape_background">
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/textView1"
            style="@style/gridtxthedear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="50dp"
            android:text="@string/commentandrecommendation"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TableLayout
            style="@style/gridtable"
            android:layout_width="wrap_content"
            android:layout_height="258dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="10dp" >

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                style="@style/tablerowodd" >

                <EditText
                    android:id="@+id/editText1"
                    style="@style/bigedittext"
                    android:layout_width="1000dp"
                    android:layout_height="240dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_edittext"
                    android:gravity="top"
                    android:inputType="textMultiLine" >

                    <requestFocus />
                </EditText>

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/button1"
            style="@style/button"
            android:layout_width="200dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="900dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sel_button"
            android:text="@string/save" />
	
   </TableLayout>
</HorizontalScrollView>
